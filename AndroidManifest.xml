<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homebuildguide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.example.homebuildguide.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.homebuildguide.SecondaryActivity"
            android:label="@string/title_activity_secondary"
            android:parentActivityName="com.example.homebuildguide.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.homebuildguide.MainActivity" />
        </activity>
        <activity
            android:name="com.example.homebuildguide.ItemDetailsActivity"
            android:label="@string/title_activity_item_details"
            android:parentActivityName="com.example.homebuildguide.SecondaryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.homebuildguide.SecondaryActivity" />
        </activity>
        <activity
            android:name="com.example.homebuildguide.AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName="com.example.homebuildguide.SecondaryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.homebuildguide.SecondaryActivity" />
        </activity>
    </application>

</manifest>
